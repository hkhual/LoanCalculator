<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="loan.haukh.loancalculator.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MortgageActivity"
            android:label="@string/mortgage_calculator"
            android:parentActivityName=".MainActivity" />

        <activity android:name="loan.haukh.loancalculator.AboutPage"
            android:label="About US"
            android:parentActivityName="loan.haukh.loancalculator.MainActivity" />

        <activity android:name="loan.haukh.loancalculator.Privacy"
            android:label="Privacy"
            android:parentActivityName="loan.haukh.loancalculator.MainActivity" />

    </application>

</manifest>